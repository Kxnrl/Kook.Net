{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": ["**.csproj"]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**.yml", "api/index.md"]
      },
      {
        "files": ["toc.yml", "index.md"]
      },
      {
        "files": ["guides/**.md", "guides/**/toc.yml"]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**",
          "**/samples/**"
        ]
      }
    ],
    "dest": "_site",
    "template": [
      "default",
      "templates/singulinkfx"
    ],
    "postProcessors": ["ExtractSearchIndex"],
    "globalMetadata": {
      "_appTitle": "KaiHeiLa.Net 文档",
      "_appName": "KaiHeiLa.Net 文档",
      "_appFooter": "KaiHeiLa.Net (c) 2022",
      "_enableSearch": true,
      "_appFaviconPath": "favicon.ico"
    }
  }
}
